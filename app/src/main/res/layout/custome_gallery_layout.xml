<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_layout_custom_bottom_navigation_bar_gallery_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:padding="5dp"
            android:background="@color/colorGray"
            android:id="@+id/recycler_view_gallery_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_custom_bottom_navigation_bar_gallery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/custom_buttom_navigation_bar_gallery_activity" />
    </LinearLayout>
</RelativeLayout>

